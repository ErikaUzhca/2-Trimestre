void setup() {
  // Inicializa la pantalla OLED
  if (!display.begin(SSD1306_SWITCHCAPVCC, I2C_ADDRESS)) {
    Serial.println(F("No se puede inicializar la pantalla OLED"));
    while (1);
  }
  
  display.clearDisplay(); // Limpia la pantalla
  display.drawBitmap(0, 0, customBitmap, 128, 64, WHITE); // Dibuja el bitmap
  display.display(); // Muestra el contenido en pantalla
}

void loop() {
  // Aquí puedes agregar código para actualizar la pantalla si es necesario
}
